            effectiveList.Add(await Http.GetFromJsonAsync<PokeTypeEffectiveModel>($"api/PokeTypeEffective?firstType={pokeInfo.FirstType}&secondType={pokeInfo.SecondType}") ?? new PokeTypeEffectiveModel());
